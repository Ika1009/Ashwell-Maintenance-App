<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Ashwell_Maintenance.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Ashwell_Maintenance"
    xmlns:view="clr-namespace:Ashwell_Maintenance.View">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate view:MainPage}"
            Icon="home_active"/>

        <ShellContent
            Title="Projects"
            ContentTemplate="{DataTemplate view:ProjectsPage}"
            Icon="projects_active"/>

        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate view:SettingsPage}"
            Icon="settings_active"/>
    </TabBar>

</Shell>
