<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ashwell_Maintenance.View.ImagePreviewPage"
             Title="Image Preview"
             BackgroundColor="#141414">
    <Grid>
        <ActivityIndicator x:Name="loading" IsRunning="True" Color="Red" WidthRequest="75" HeightRequest="75" VerticalOptions="Center" HorizontalOptions="Center"/>
        <Image x:Name="PreviewImage" Aspect="AspectFit" VerticalOptions="Center" HorizontalOptions="Center" IsVisible="False"/>
    </Grid>
</ContentPage>