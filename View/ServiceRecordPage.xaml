                    </Frame>
                </VerticalStackLayout>

                <Label Text="Flue Type:" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" Margin="10, 0, 0, 0"/>

                <VerticalStackLayout>
                    <HorizontalStackLayout>
                        <CheckBox x:Name="checkOpenFlue">
                            <CheckBox.Triggers>
                                <DataTrigger TargetType="CheckBox" Binding="{Binding Source={x:Reference checkOpenFlue}, Path=IsChecked}" Value="True">
