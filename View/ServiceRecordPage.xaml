                                <DataTrigger TargetType="CheckBox" Binding="{Binding Source={x:Reference checkFlueless}, Path=IsChecked}" Value="True">
                                    <Setter Property="Color" Value="Red" />
                                </DataTrigger>
                                <DataTrigger TargetType="CheckBox" Binding="{Binding Source={x:Reference checkFlueless}, Path=IsChecked}" Value="False">
                                    <Setter Property="Color" Value="#fff" />
                                </DataTrigger>
                            </CheckBox.Triggers>
                        </CheckBox>
                        <Label Text="Flueless" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" VerticalTextAlignment="Center"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Badged Burner Pressure (mbar):" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" Margin="10, 0, 0, 0"/>

                    <Frame Padding="20, 0" BorderColor="Transparent" BackgroundColor="#222225" CornerRadius="100">
                        <local:LinelessEntry TextColor="#fff"  FontSize="15" FontFamily="SatoshiMedium"/>
                    </Frame>
                </VerticalStackLayout>
                
                <VerticalStackLayout>
                    <HorizontalStackLayout>
                        <CheckBox x:Name="checkVentilation">
                            <CheckBox.Triggers>
                                <DataTrigger TargetType="CheckBox" Binding="{Binding Source={x:Reference checkVentilation}, Path=IsChecked}" Value="True">
                                    <Setter Property="Color" Value="Red" />
                                </DataTrigger>
                                <DataTrigger TargetType="CheckBox" Binding="{Binding Source={x:Reference checkVentilation}, Path=IsChecked}" Value="False">
                                    <Setter Property="Color" Value="#fff" />
                                </DataTrigger>
                            </CheckBox.Triggers>
                        </CheckBox>
                        <Label Text="Ventilation Satisfactory?" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" VerticalTextAlignment="Center"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout>
                        <CheckBox x:Name="checkFlueCondition">
                            <CheckBox.Triggers>
                                <DataTrigger TargetType="CheckBox" Binding="{Binding Source={x:Reference checkFlueCondition}, Path=IsChecked}" Value="True">
