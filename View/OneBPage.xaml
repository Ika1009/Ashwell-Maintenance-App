            </ScrollView>

            <ScrollView x:Name="OBSection2" Grid.Row="1" IsVisible="False" VerticalScrollBarVisibility="Never">
                <VerticalStackLayout Spacing="40" Margin="0, 40, 0, 0">
                    <Label Text="Details Of Tightness / Strength Test" TextColor="#fff" FontSize="18" FontFamily="SatoshiMedium" HorizontalTextAlignment="Center"/>

                    <Grid ColumnDefinitions="1.5*, *" RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto" ColumnSpacing="10" RowSpacing="20">
                        <Label Text="Test Medium
                               ( Test with air if new ):" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" HorizontalTextAlignment="Start" VerticalTextAlignment="Center"/>
                        <Grid Grid.Column="1">
                            <Frame Padding="0" BorderColor="Transparent" CornerRadius="100">
                                <local:LinelessPicker x:Name="testMediumPicker" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" HorizontalTextAlignment="Center" BackgroundColor="#222225"
                                                          SelectedIndexChanged="testMediumPicker_IndexChanged">
                                    <local:LinelessPicker.ItemsSource>
                                        <x:Array Type="{x:Type x:String}">
                                            <x:String>Natural Gas</x:String>
                                            <x:String>LPG</x:String>
                                            <x:String>Air</x:String>
                                        </x:Array>
                                    </local:LinelessPicker.ItemsSource>
                                </local:LinelessPicker>
                            </Frame>

                            <Label x:Name="testMediumPicker_x" Text="×" IsVisible="False"
                                   TextColor="#fff" FontSize="14" FontFamily="SatoshiMedium" HorizontalTextAlignment="End" VerticalTextAlignment="Center" Margin="0, 0, 10, 0"/>

                            <Frame x:Name="testMediumPicker_delete" IsVisible="False" BackgroundColor="Transparent" BorderColor="Transparent">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="testMediumPicker_Delete"/>
                                </Frame.GestureRecognizers>
                            </Frame>
                        </Grid>

                        <Label Text="Installation:" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" HorizontalTextAlignment="Start" VerticalTextAlignment="Center" Grid.Row="1"/>
                        <Grid Grid.Row="1" Grid.Column="1">
                            <Frame Padding="0" BorderColor="Transparent" CornerRadius="100">
                                <local:LinelessPicker x:Name="installationPicker" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" HorizontalTextAlignment="Center" BackgroundColor="#222225"
                                                      SelectedIndexChanged="installationPicker_IndexChanged">
                                    <local:LinelessPicker.ItemsSource>
                                        <x:Array Type="{x:Type x:String}">
                                            <x:String>New</x:String>
                                            <x:String>Existing</x:String>
                                        </x:Array>
                                    </local:LinelessPicker.ItemsSource>
                                </local:LinelessPicker>
                            </Frame>

                            <Label x:Name="installationPicker_x" Text="×" IsVisible="False"
                                   TextColor="#fff" FontSize="14" FontFamily="SatoshiMedium" HorizontalTextAlignment="End" VerticalTextAlignment="Center" Margin="0, 0, 10, 0"/>

                            <Frame x:Name="installationPicker_delete" IsVisible="False" BackgroundColor="Transparent" BorderColor="Transparent">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="installationPicker_Delete"/>
                                </Frame.GestureRecognizers>
                            </Frame>
                        </Grid>

                        <Label Text="Is Weather / Temprature Stable?" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" HorizontalTextAlignment="Start" VerticalTextAlignment="Center" Grid.Row="2"/>
                        <FlexLayout Grid.Row="2" Grid.Column="1" Direction="Row" JustifyContent="SpaceBetween">
                            <HorizontalStackLayout Spacing="-5">
                                <CheckBox x:Name="checkIsWeatherTemperatureStableYes" IsChecked="True">
                                    <CheckBox.Triggers>
                                        <DataTrigger TargetType="CheckBox" Binding="{Binding Source={x:Reference checkIsWeatherTemperatureStableYes}, Path=IsChecked}" Value="True">
                                            <Setter Property="Color" Value="Red" />
                                        </DataTrigger>
                                        <DataTrigger TargetType="CheckBox" Binding="{Binding Source={x:Reference checkIsWeatherTemperatureStableYes}, Path=IsChecked}" Value="False">
                                            <Setter Property="Color" Value="#fff" />
                                        </DataTrigger>

                                        <DataTrigger TargetType="CheckBox" Binding="{Binding Source={x:Reference checkIsWeatherTemperatureStableNo}, Path=IsChecked}" Value="True">
                                            <Setter Property="IsChecked" Value="False"/>
                                        </DataTrigger>
                                        <DataTrigger TargetType="CheckBox" Binding="{Binding Source={x:Reference checkIsWeatherTemperatureStableNo}, Path=IsChecked}" Value="False">
                                            <Setter Property="IsChecked" Value="True"/>
                                        </DataTrigger>
                                    </CheckBox.Triggers>
                                </CheckBox>

                                <Label Text="Yes" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" VerticalTextAlignment="Center"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Spacing="-5">
                                <CheckBox x:Name="checkIsWeatherTemperatureStableNo">
                                    <CheckBox.Triggers>
                                        <DataTrigger TargetType="CheckBox" Binding="{Binding Source={x:Reference checkIsWeatherTemperatureStableNo}, Path=IsChecked}" Value="True">
                                            <Setter Property="Color" Value="Red" />
                                        </DataTrigger>
                                        <DataTrigger TargetType="CheckBox" Binding="{Binding Source={x:Reference checkIsWeatherTemperatureStableNo}, Path=IsChecked}" Value="False">
                                            <Setter Property="Color" Value="#fff" />
                                        </DataTrigger>

                                        <DataTrigger TargetType="CheckBox" Binding="{Binding Source={x:Reference checkIsWeatherTemperatureStableYes}, Path=IsChecked}" Value="True">
                                            <Setter Property="IsChecked" Value="False"/>
                                        </DataTrigger>
                                        <DataTrigger TargetType="CheckBox" Binding="{Binding Source={x:Reference checkIsWeatherTemperatureStableYes}, Path=IsChecked}" Value="False">
                                            <Setter Property="IsChecked" Value="True"/>
                                        </DataTrigger>
                                    </CheckBox.Triggers>
                                </CheckBox>

                                <Label Text="No" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" VerticalTextAlignment="Center"/>
                            </HorizontalStackLayout>
                        </FlexLayout>

                        <Label Text="Test Gauge Used (Electronic, U Gauge etc):" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" HorizontalTextAlignment="Start" VerticalTextAlignment="Center" Grid.Row="3"/>
                        <Grid Grid.Row="3" Grid.Column="1">
                            <Frame Padding="15, 0" BorderColor="Transparent" BackgroundColor="#222225" CornerRadius="100">
                                <local:LinelessPicker x:Name="testGaugeUsed" TextColor="#fff"  FontSize="16 " FontFamily="SatoshiMedium" HorizontalTextAlignment="Center" SelectedIndexChanged="testGaugeUsed_IndexChanged">
                                    <local:LinelessPicker.ItemsSource>
                                        <x:Array Type="{x:Type x:String}">
                                            <x:String>High SG</x:String>
                                            <x:String>Standard U</x:String>
                                            <x:String>Electronic</x:String>
                                        </x:Array>
                                    </local:LinelessPicker.ItemsSource>
                                </local:LinelessPicker>
                            </Frame>

                            <Label x:Name="testGaugeUsed_x" Text="×" IsVisible="False" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" HorizontalTextAlignment="End" VerticalTextAlignment="Center" Margin="0, 0, 15, 0"/>

                            <Frame x:Name="testGaugeUsed_delete" IsVisible="False" BackgroundColor="Transparent" BorderColor="Transparent">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="testGaugeUsed_Delete"/>
                                </Frame.GestureRecognizers>
                            </Frame>
                        </Grid>

                        <Label Text="Tightness Test Pressure ( mbar ) ( TTP ):" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" HorizontalTextAlignment="Start" VerticalTextAlignment="Center" Grid.Row="4"/>
                        <Frame Padding="15, 0" BorderColor="Transparent" BackgroundColor="#222225" CornerRadius="100" Grid.Row="4" Grid.Column="1">
                            <local:LinelessEntry x:Name="tightnessTestPressure" TextColor="#fff"  FontSize="16 " FontFamily="SatoshiMedium" HorizontalTextAlignment="Center" Keyboard="Numeric"/>
                        </Frame>

                        <Label Text="Maximum Permissible Pressure Drop ( mbar ) ( MAPD ):" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" HorizontalTextAlignment="Start" VerticalTextAlignment="Center" Grid.Row="5"/>
                        <Grid Grid.Row="5" Grid.Column="1">
                            <Frame Padding="15, 0" BorderColor="Transparent" BackgroundColor="#222225" CornerRadius="100" VerticalOptions="Center">
                                <local:LinelessPicker x:Name="maximumPermissiblePressureDrop" TextColor="#fff"  FontSize="16 " FontFamily="SatoshiMedium" HorizontalTextAlignment="Center" SelectedIndexChanged="maximumPermissiblePressureDrop_IndexChanged">
                                    <local:LinelessPicker.ItemsSource>
                                        <x:Array Type="{x:Type x:String}">
                                            <x:String>8</x:String>
                                            <x:String>4</x:String>
                                            <x:String>2.5</x:String>
                                            <x:String>1.5</x:String>
                                            <x:String>1</x:String>
                                            <x:String>0.5</x:String>
                                            <x:String>GRM</x:String>
                                        </x:Array>
                                    </local:LinelessPicker.ItemsSource>
                                </local:LinelessPicker>
                            </Frame>

                            <Label x:Name="maximumPermissiblePressureDrop_x" Text="×" IsVisible="False" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" HorizontalTextAlignment="End" VerticalTextAlignment="Center" Margin="0, 0, 15, 0"/>

                            <Frame x:Name="maximumPermissiblePressureDrop_delete" IsVisible="False" BackgroundColor="Transparent" BorderColor="Transparent">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="maximumPermissiblePressureDrop_Delete"/>
                                </Frame.GestureRecognizers>
                            </Frame>
                        </Grid>
                    </Grid>

                    <Frame Grid.Row="2" Padding="0" MinimumHeightRequest="0" HeightRequest="5" BorderColor="Transparent" CornerRadius="100">
                        <BoxView Color="#222225"/>
                    </Frame>

                    <Button Text="Next" TextColor="#fff" FontSize="18" FontFamily="SatoshiMedium" HeightRequest="70" WidthRequest="250" BackgroundColor="#c20000" CornerRadius="40" Margin="0, 0, 0, 100" Clicked="OneBNext2"/>
                </VerticalStackLayout>
            </ScrollView>

            <ScrollView x:Name="OBSection3" Grid.Row="1" IsVisible="False" VerticalScrollBarVisibility="Never">
                <VerticalStackLayout Spacing="40" Margin="0, 40, 0, 0">
                    <Label Text="Tightness Testing" TextColor="#fff" FontSize="18" FontFamily="SatoshiMedium" HorizontalTextAlignment="Center"/>
                
                    <Grid ColumnDefinitions="2*, *" RowDefinitions="Auto, Auto, Auto" ColumnSpacing="10" RowSpacing="20">
                        <Label TextColor="#fff" FontSize="16" HorizontalTextAlignment="Start">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Let-By Duration ( minutes )&#10;" TextColor="Red" FontAttributes="Bold" FontFamily="SatoshiMedium"/>
                                    <Span Text="( Minimum 2 Mins )" FontFamily="SatoshiMedium"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Frame Grid.Column="1" Padding="15, 0" BorderColor="#707070" BackgroundColor="#222225" CornerRadius="100" VerticalOptions="Center">
                            <local:LinelessEntry x:Name="letByDuration" Text="1" TextColor="#fff"  FontSize="16 " FontFamily="SatoshiMedium" HorizontalTextAlignment="Center" Keyboard="Numeric" IsEnabled="False"/>
                        </Frame>

                        <Label Grid.Row="1" TextColor="#fff" FontSize="16" HorizontalTextAlignment="Start">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Stabilisation Duration ( minutes )&#10;" TextColor="Red" FontAttributes="Bold" FontFamily="SatoshiMedium"/>
                                    <Span Text="( 6 Minutes or Same as Test Time if Greater )" FontFamily="SatoshiMedium"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Frame Grid.Row="1" Grid.Column="1" Padding="15, 0" BorderColor="#707070" BackgroundColor="#222225" CornerRadius="100" VerticalOptions="Center">
                            <local:LinelessEntry x:Name="stabilisationDuration" Text="1" TextColor="#fff" FontSize="16 " FontFamily="SatoshiMedium" HorizontalTextAlignment="Center" Keyboard="Numeric" IsEnabled="False"/>
                        </Frame>

                        <Label Grid.Row="2" Text="Test Duration ( minutes ) ( TTD )" TextColor="Red" FontSize="16" FontAttributes="Bold" FontFamily="SatoshiMedium" HorizontalTextAlignment="Start" VerticalTextAlignment="Center"/>
                        <Frame Grid.Row="2" Grid.Column="1" Padding="15, 0" BorderColor="#707070" BackgroundColor="#222225" CornerRadius="100" VerticalOptions="Center">
                            <local:LinelessEntry x:Name="testDuration" Text="2" TextColor="#fff"  FontSize="16 " FontFamily="SatoshiMedium" HorizontalTextAlignment="Center" Keyboard="Numeric" IsEnabled="False"/>
                        </Frame>
                    </Grid>

                    <Frame Padding="0" MinimumHeightRequest="0" HeightRequest="5" BorderColor="Transparent" CornerRadius="100">
                        <BoxView Color="#222225"/>
                    </Frame>

                    <Label Text="Tightness Test Results" TextColor="#fff" FontSize="18" FontFamily="SatoshiMedium" HorizontalTextAlignment="Center"/>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Actual Pressure Drop&#10;( if any ) ( mbar ) ( MAPD ):" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" Margin="15, 0, 0, 0"/>

                        <Frame Padding="15, 0" BorderColor="Transparent" BackgroundColor="#222225" CornerRadius="100">
                            <local:LinelessEntry x:Name="actualPressureDropResult" Text="0" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" IsEnabled="False"/>
                        </Frame>
                    </VerticalStackLayout>

                    <Grid ColumnDefinitions="*, *" ColumnSpacing="10">
                        <Label Text="Test Passed or Failed:" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" HorizontalTextAlignment="Start" VerticalTextAlignment="Center" Margin="15, 0, 0, 0"/>

                        <Frame Grid.Column="1" Padding="0" BorderColor="Transparent" CornerRadius="100">
                            <Grid>
                                <local:LinelessPicker x:Name="testPassedOrFailed" TextColor="Red" FontSize="20" FontFamily="SatoshiMedium" HorizontalTextAlignment="Center" BackgroundColor="#222225" SelectedIndexChanged="testPassedOrFailed_IndexChanged">
                                    <local:LinelessPicker.ItemsSource>
                                        <x:Array Type="{x:Type x:String}">
                                            <x:String>PASS</x:String>
                                            <x:String>FAIL</x:String>
                                        </x:Array>
                                    </local:LinelessPicker.ItemsSource>
                                </local:LinelessPicker>

                                <Label x:Name="testPassedOrFailed_x" Text="×" IsVisible="False" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" HorizontalTextAlignment="End" VerticalTextAlignment="Center" Margin="0, 0, 15, 0"/>

                                <Frame x:Name="testPassedOrFailed_delete" IsVisible="False" BackgroundColor="Transparent" BorderColor="Transparent">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="testPassedOrFailed_Delete"/>
                                    </Frame.GestureRecognizers>
                                </Frame>
                            </Grid>
                        </Frame>
                    </Grid>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Engineers Comments:" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" Margin="15, 0, 0, 0"/>

                        <Frame Padding="15, 0" BorderColor="Transparent" HeightRequest="100" BackgroundColor="#222225" CornerRadius="10">
                            <local:LinelessEditor x:Name="engineersComments" TextColor="#fff"  FontSize="16 " FontFamily="SatoshiMedium"/>
                        </Frame>
                    </VerticalStackLayout>

                    <Frame Grid.Row="2" Padding="0" MinimumHeightRequest="0" HeightRequest="5" BorderColor="Transparent" CornerRadius="100">
                        <BoxView Color="#222225"/>
                    </Frame>

                    <Button Text="Next" TextColor="#fff" FontSize="18" FontFamily="SatoshiMedium" HeightRequest="70" WidthRequest="250" BackgroundColor="#c20000" CornerRadius="40" Margin="0, 0, 0, 100" Clicked="OneBNext3"/>
                </VerticalStackLayout>
            </ScrollView>

            <ScrollView x:Name="OBSection4" Grid.Row="1" IsVisible="False" VerticalScrollBarVisibility="Never">
                <VerticalStackLayout Spacing="40" Margin="0, 40, 0, 0">
                    <Label Text="By signing this document, I confirm that all the work on this form has been completed in accordance with GSIUR, industry standards and procedures and the installation is safe to use, or where appropriate, has been isolated and made safe."
                           TextColor="Red"
                           FontSize="16"
                           FontFamily="SatoshiMedium"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"/>

                    <Frame Padding="0" MinimumHeightRequest="0" HeightRequest="5" BorderColor="Transparent" CornerRadius="100">
                        <BoxView Color="#222225"/>
                    </Frame>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Date:" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" Margin="15, 0, 0, 0"/>

                        <Frame Padding="15, 0" BorderColor="Transparent" BackgroundColor="#222225" CornerRadius="100">
                            <local:LinelessEntry x:Name="date" TextColor="#fff"  FontSize="16 " FontFamily="SatoshiMedium"/>
                        </Frame>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Engineer:" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" Margin="15, 0, 0, 0"/>

                        <Frame Padding="15, 0" BorderColor="Transparent" BackgroundColor="#222225" CornerRadius="100">
                            <local:LinelessEntry x:Name="engineer" TextColor="#fff"  FontSize="16 " FontFamily="SatoshiMedium"/>
                        </Frame>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Card Number:" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" Margin="15, 0, 0, 0"/>

                        <Frame Padding="15, 0" BorderColor="Transparent" BackgroundColor="#222225" CornerRadius="100">
                            <local:LinelessEntry x:Name="cardNumber" TextColor="#fff" FontSize="16 " FontFamily="SatoshiMedium"/>
                        </Frame>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Client's Name:" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" Margin="15, 0, 0, 0"/>

                        <Frame Padding="15, 0" BorderColor="Transparent" BackgroundColor="#222225" CornerRadius="100">
                            <local:LinelessEntry x:Name="clientsName" TextColor="#fff"  FontSize="16 " FontFamily="SatoshiMedium"/>
                        </Frame>
                    </VerticalStackLayout>

                    <VerticalStackLayout>
                        <Label Text="Warning Notice No:" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" Margin="15, 0, 0, 0"/>

                        <Frame Padding="15, 0" BorderColor="Transparent" BackgroundColor="#222225" CornerRadius="100">
                            <local:LinelessEntry x:Name="WarningNoticeRefNo" TextColor="#fff"  FontSize="16 " FontFamily="SatoshiMedium" Keyboard="Numeric"/>
                        </Frame>
                    </VerticalStackLayout>

                    <Frame Padding="0" MinimumHeightRequest="0" HeightRequest="5" BorderColor="Transparent" CornerRadius="100">
                        <BoxView Color="#222225"/>
                    </Frame>

                    <Label Text="By signing this document, I confirm that all the work on this form has been completed in accordance with GSIUR, industry standards and procedures and the installation is safe to use, or where appropriate, has been isolated and made safe."
                           TextColor="Red"
                           FontSize="16"
                           FontFamily="SatoshiMedium"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"/>

                    <Frame Padding="0" MinimumHeightRequest="0" HeightRequest="5" BorderColor="Transparent" CornerRadius="100">
                        <BoxView Color="#222225"/>
                    </Frame>

                    <Button Text="Next" TextColor="#fff" FontSize="18" FontFamily="SatoshiMedium" HeightRequest="70" WidthRequest="250" BackgroundColor="#c20000" CornerRadius="40" Margin="0, 0, 0, 100" Clicked="OneBNextFinish"/>
                </VerticalStackLayout>
            </ScrollView>

            <ScrollView x:Name="FolderSection" Grid.Row="1" IsVisible="False" VerticalScrollBarVisibility="Never">
                <VerticalStackLayout Spacing="40" Margin="0, 40, 0, 0">
                    <Label Text="Choose Folder" TextColor="#fff" FontSize="18" FontFamily="SatoshiMedium" HorizontalTextAlignment="Center"/>

                    <VerticalStackLayout Spacing="40" x:Name="_folderStackLayout">
                        <Frame BackgroundColor="#222225" CornerRadius="40" BorderColor="Transparent" Padding="0">
                            <Grid>
                                <Grid Padding="20, 10">
                                    <ImageButton Grid.Column="2" Source="new_folder.png" WidthRequest="30" HeightRequest="30" HorizontalOptions="End"/>

                                    <Label Text="New Folder" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" HorizontalTextAlignment="Start" VerticalTextAlignment="Center"/>
                                </Grid>

                                <Button Grid.ColumnSpan="3" BackgroundColor="Transparent" MinimumHeightRequest="0" Clicked="NewFolder"/>
                            </Grid>
                        </Frame>

                        <ListView x:Name="FoldersListView" SeparatorVisibility="None" VerticalScrollBarVisibility="Never" Margin="0, 0, 0, 100">
                            <ListView.RowHeight>60</ListView.RowHeight>

                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <Frame BackgroundColor="#222225" CornerRadius="40" HeightRequest="50" BorderColor="Transparent" Padding="0">
                                            <Grid>
                                                <Grid Padding="20, 0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="0.5*"/>
                                                        <ColumnDefinition Width="40"/>
                                                    </Grid.ColumnDefinitions>

                                                    <ImageButton Grid.Column="2" Source="forward.png" WidthRequest="20" HeightRequest="30" HorizontalOptions="End"/>
                                                    <Label Text="{Binding Name}" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" HorizontalTextAlignment="Start" VerticalTextAlignment="Center" LineBreakMode="TailTruncation"/>
                                                    <Label Grid.Column="1" Text="{Binding Timestamp}" TextColor="#707070" FontSize="14" FontFamily="SatoshiMedium" HorizontalTextAlignment="End" VerticalTextAlignment="Center"/>
                                                </Grid>

                                                <Button Grid.ColumnSpan="3" BackgroundColor="Transparent" MinimumHeightRequest="0" Clicked="FolderChosen" CommandParameter="{Binding Id}"/>
                                            </Grid>
                                        </Frame>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>


                    </VerticalStackLayout>
                </VerticalStackLayout>
            </ScrollView>
        
            <Image x:Name="passStamp" Grid.RowSpan="2" Source="pass.png" Opacity="0"/>
            <Image x:Name="failStamp" Grid.RowSpan="2" Source="fail.png" Opacity="0"/>
        </Grid>

        <ActivityIndicator x:Name="loadingBG" IsRunning="False" Color="Transparent" BackgroundColor="#80000000" Grid.RowSpan="2" Margin="-20, -20, -20, 0">
            <ActivityIndicator.IsVisible>
                <OnPlatform x:TypeArguments="x:Boolean">
                    <On Platform="Android, iOS" Value="True" />
                    <On Platform="Windows" Value="False" />
                </OnPlatform>
            </ActivityIndicator.IsVisible>
        </ActivityIndicator>
        <ActivityIndicator x:Name="loading" IsRunning="False" Color="Red" WidthRequest="75" Grid.RowSpan="2">
            <ActivityIndicator.IsVisible>
                <OnPlatform x:TypeArguments="x:Boolean">
                    <On Platform="Android, iOS" Value="True" />
                    <On Platform="Windows" Value="False" />
                </OnPlatform>
            </ActivityIndicator.IsVisible>
        </ActivityIndicator>
    </Grid>
</ContentPage>