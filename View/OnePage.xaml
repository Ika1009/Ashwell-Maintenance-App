                        </Label>

                        <Line Grid.Column="1" Grid.RowSpan="2" X2="0" Y2="100" Stroke="Red" StrokeThickness="2" VerticalOptions="Center"/>

                        <local:LinelessEntry x:Name="AreaB_Value" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" VerticalOptions="Center" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" IsEnabled="False" Grid.Column="1" Grid.RowSpan="2"/>

                        <Grid ColumnDefinitions="1.5*, *" Grid.Row="1" Margin="0, 5, 0, 0">
                            <Label Text="Room Volume ( m³ ):" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" VerticalTextAlignment="Center"/>

                            <Frame Grid.Column="1" Padding="15, 0" BorderColor="Transparent" BackgroundColor="#222225" CornerRadius="100">
                                <local:LinelessEntry x:Name="roomVolume" TextColor="#fff"  FontSize="16 " FontFamily="SatoshiMedium" HorizontalTextAlignment="Center" Keyboard="Numeric" TextChanged="roomVolume_TextChanged"/>
                            </Frame>
                        </Grid>
                    </Grid>

                    <Grid x:Name="AreaCD" ColumnDefinitions="3*, *" ColumnSpacing="10" IsVisible="False">
                        <Label TextColor="#fff" FontSize="16" HorizontalTextAlignment="Start">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Area C &amp; D" FontAttributes="Bold" FontFamily="SatoshiMedium"/>
                                    <Span Text=":  Adequately Vented Internal of Volume More Than
                                          ( 60+ ) m³ and External Exposed Areas or Buried Pipe &#10;" FontFamily="SatoshiMedium"/>
                                    <Span Text="( 0.047 x GRM x IV x F1 )" TextColor="#707070" FontFamily="SatoshiMedium"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <Line Grid.Column="1" X2="0" Y2="80" Stroke="Red" StrokeThickness="2" VerticalOptions="Center"/>

                        <local:LinelessEntry x:Name="AreaCD_Value" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" VerticalOptions="Center" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" IsEnabled="False" Grid.Column="1"/>
                    </Grid>

                    <Frame Grid.Row="2" Padding="0" MinimumHeightRequest="0" HeightRequest="2" BorderColor="Transparent" CornerRadius="100">
                        <BoxView Color="#222225"/>
                    </Frame>

                    <Grid ColumnDefinitions="2*, *" RowDefinitions="Auto, Auto, Auto" ColumnSpacing="10" RowSpacing="20">
                        <Label TextColor="#fff" FontSize="16" HorizontalTextAlignment="Start">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Let-By Duration ( minutes )&#10;" TextColor="Red" FontAttributes="Bold" FontFamily="SatoshiMedium"/>
                                    <!--<Span Text="( Minimum 2 Mins or Same as Test Time if Greater )" FontFamily="SatoshiMedium"/>-->
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Frame Grid.Column="1" Padding="15, 0" BorderColor="#707070" BackgroundColor="#222225" CornerRadius="100" VerticalOptions="Center">
                            <local:LinelessEntry x:Name="letByDuration" TextColor="#fff"  FontSize="16 " FontFamily="SatoshiMedium" HorizontalTextAlignment="Center" Keyboard="Numeric" IsEnabled="False"/>
                        </Frame>

                        <Label Grid.Row="1" TextColor="#fff" FontSize="16" HorizontalTextAlignment="Start">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Stabilisation Duration ( minutes )&#10;" TextColor="Red" FontAttributes="Bold" FontFamily="SatoshiMedium"/>
                                    <!--<Span Text="( 15 Minutes or Same as Test Time if Greater )" FontFamily="SatoshiMedium"/>-->
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Frame Grid.Row="1" Grid.Column="1" Padding="15, 0" BorderColor="#707070" BackgroundColor="#222225" CornerRadius="100" VerticalOptions="Center">
                            <local:LinelessEntry x:Name="stabilisationDuration" TextColor="#fff" FontSize="16 " FontFamily="SatoshiMedium" HorizontalTextAlignment="Center" Keyboard="Numeric" IsEnabled="False"/>
                        </Frame>

                        <Label Grid.Row="2" Text="Test Duration ( minutes ) ( TTD )" TextColor="Red" FontSize="16" FontAttributes="Bold" FontFamily="SatoshiMedium" HorizontalTextAlignment="Start" VerticalTextAlignment="Center"/>
                        <Frame Grid.Row="2" Grid.Column="1" Padding="15, 0" BorderColor="#707070" BackgroundColor="#222225" CornerRadius="100" VerticalOptions="Center">
                            <local:LinelessEntry x:Name="testDuration" TextColor="#fff"  FontSize="16 " FontFamily="SatoshiMedium" HorizontalTextAlignment="Center" Keyboard="Numeric" IsEnabled="False"/>
                        </Frame>
                    </Grid>

                    <Frame Grid.Row="2" Padding="0" MinimumHeightRequest="0" HeightRequest="5" BorderColor="Transparent" CornerRadius="100">
                        <BoxView Color="#222225"/>
                    </Frame>

                    <Button Text="Next" TextColor="#fff" FontSize="18" FontFamily="SatoshiMedium" HeightRequest="70" WidthRequest="250" BackgroundColor="#c20000" CornerRadius="40" Margin="0, 0, 0, 100" Clicked="ONext4"/>
                </VerticalStackLayout>
            </ScrollView>

            <ScrollView x:Name="OSection5" Grid.Row="1" IsVisible="False" VerticalScrollBarVisibility="Never">
                <VerticalStackLayout Spacing="40" Margin="0, 40, 0, 0">
                    <Label Text="Tightness Test Results" TextColor="#fff" FontSize="18" FontFamily="SatoshiMedium" HorizontalTextAlignment="Center"/>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Actual Pressure Drop ( if any ) ( mbar ):" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" Margin="15, 0, 0, 0"/>

                        <Frame Padding="15, 0" BorderColor="Transparent" BackgroundColor="#222225" CornerRadius="100">
                            <local:LinelessEntry x:Name="actualPressureDropResult" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium"/>
                        </Frame>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Actual Leak Rate ( m³/h ):" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" Margin="15, 0, 0, 0"/>

                        <Frame Padding="15, 0" BorderColor="Transparent" BackgroundColor="#222225" CornerRadius="100">
                            <local:LinelessEntry x:Name="actualLeakRateResult" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium"/>
                        </Frame>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Areas With Inadequate Ventilation Checked?" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" HorizontalTextAlignment="Center"/>

                        <FlexLayout Direction="Row" JustifyContent="SpaceEvenly">
                            <HorizontalStackLayout>
                                <CheckBox x:Name="checkAreasWithInadequateVentilationYes" Color="#fff" CheckedChanged="checkAreasWithInadequateVentilationYes_CheckedChanged"/>
                                <Label Text="Yes" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" VerticalTextAlignment="Center"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout>
                                <CheckBox x:Name="checkAreasWithInadequateVentilationNo" Color="#fff" CheckedChanged="checkAreasWithInadequateVentilationNo_CheckedChanged"/>
                                <Label Text="No" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" VerticalTextAlignment="Center"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout>
                                <CheckBox x:Name="checkAreasWithInadequateVentilationNA" Color="#fff" CheckedChanged="checkAreasWithInadequateVentilationNA_CheckedChanged"/>
                                <Label Text="N/A" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" VerticalTextAlignment="Center"/>
                            </HorizontalStackLayout>
                        </FlexLayout>
                    </VerticalStackLayout>

                    <Frame Padding="0" MinimumHeightRequest="0" HeightRequest="5" BorderColor="Transparent" CornerRadius="100">
                        <BoxView Color="#222225"/>
                    </Frame>

                    <Label Text="Final Test Results" TextColor="#fff" FontSize="18" FontFamily="SatoshiMedium" HorizontalTextAlignment="Center"/>

                    <Grid ColumnDefinitions="*, *" ColumnSpacing="10">
                        <Label Text="Test Passed or Failed:" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" HorizontalTextAlignment="Start" VerticalTextAlignment="Center"/>

                        <Frame Grid.Column="1" Padding="0" BorderColor="Transparent" CornerRadius="100">
                            <Grid>
                                <local:LinelessPicker x:Name="testPassedOrFailed" TextColor="Red" FontSize="20" FontFamily="SatoshiMedium" HorizontalTextAlignment="Center" BackgroundColor="#222225" SelectedIndexChanged="testPassedOrFailed_IndexChanged">
                                    <local:LinelessPicker.ItemsSource>
                                        <x:Array Type="{x:Type x:String}">
                                            <x:String>PASS</x:String>
                                            <x:String>FAIL</x:String>
                                        </x:Array>
                                    </local:LinelessPicker.ItemsSource>
                                </local:LinelessPicker>

                                <Label x:Name="testPassedOrFailed_x" Text="×" IsVisible="False" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" HorizontalTextAlignment="End" VerticalTextAlignment="Center" Margin="0, 0, 15, 0"/>

                                <Frame x:Name="testPassedOrFailed_delete" IsVisible="False" BackgroundColor="Transparent" BorderColor="Transparent">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="testPassedOrFailed_Delete"/>
                                    </Frame.GestureRecognizers>
                                </Frame>
                            </Grid>
                        </Frame>
                    </Grid>

                    <Frame Grid.Row="2" Padding="0" MinimumHeightRequest="0" HeightRequest="5" BorderColor="Transparent" CornerRadius="100">
                        <BoxView Color="#222225"/>
                    </Frame>

                    <Button Text="Next" TextColor="#fff" FontSize="18" FontFamily="SatoshiMedium" HeightRequest="70" WidthRequest="250" BackgroundColor="#c20000" CornerRadius="40" Margin="0, 0, 0, 100" Clicked="ONext5"/>
                </VerticalStackLayout>
            </ScrollView>

            <ScrollView x:Name="OSection6" Grid.Row="1" IsVisible="False" VerticalScrollBarVisibility="Never">
                <VerticalStackLayout Spacing="40" Margin="0, 40, 0, 0">
                    <Label Text="By signing this document, I confirm that all the work on this form has been completed in accordance with GSIUR, industry standards and procedures and the installation is safe to use, or where appropriate, has been isolated and made safe."
                           TextColor="Red"
                           FontSize="16"
                           FontFamily="SatoshiMedium"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"/>

                    <Frame Padding="0" MinimumHeightRequest="0" HeightRequest="5" BorderColor="Transparent" CornerRadius="100">
                        <BoxView Color="#222225"/>
                    </Frame>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Date:" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" Margin="15, 0, 0, 0"/>

                        <Frame Padding="15, 0" BorderColor="Transparent" BackgroundColor="#222225" CornerRadius="100">
                            <local:LinelessEntry x:Name="date" TextColor="#fff"  FontSize="16 " FontFamily="SatoshiMedium"/>
                        </Frame>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Engineer:" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" Margin="15, 0, 0, 0"/>

                        <Frame Padding="15, 0" BorderColor="Transparent" BackgroundColor="#222225" CornerRadius="100">
                            <local:LinelessEntry x:Name="engineer" TextColor="#fff"  FontSize="16 " FontFamily="SatoshiMedium"/>
                        </Frame>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Card Number:" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" Margin="15, 0, 0, 0"/>

                        <Frame Padding="15, 0" BorderColor="Transparent" BackgroundColor="#222225" CornerRadius="100">
                            <local:LinelessEntry x:Name="cardNumber" TextColor="#fff" FontSize="16 " FontFamily="SatoshiMedium"/>
                        </Frame>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Client's Name:" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" Margin="15, 0, 0, 0"/>

                        <Frame Padding="15, 0" BorderColor="Transparent" BackgroundColor="#222225" CornerRadius="100">
                            <local:LinelessEntry x:Name="clientsName" TextColor="#fff"  FontSize="16 " FontFamily="SatoshiMedium"/>
                        </Frame>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Warning Notice No:" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" Margin="15, 0, 0, 0"/>

                        <Frame Padding="15, 0" BorderColor="Transparent" BackgroundColor="#222225" CornerRadius="100">
                            <local:LinelessEntry x:Name="WarningNoticeRefNo" TextColor="#fff"  FontSize="16 " FontFamily="SatoshiMedium" Keyboard="Numeric"/>
                        </Frame>
                    </VerticalStackLayout>

                    <Frame Padding="0" MinimumHeightRequest="0" HeightRequest="5" BorderColor="Transparent" CornerRadius="100">
                        <BoxView Color="#222225"/>
                    </Frame>

                    <Label Text="By signing this document, I confirm that all the work on this form has been completed in accordance with GSIUR, industry standards and procedures and the installation is safe to use, or where appropriate, has been isolated and made safe."
                           TextColor="Red"
                           FontSize="16"
                           FontFamily="SatoshiMedium"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"/>

                    <Frame Padding="0" MinimumHeightRequest="0" HeightRequest="5" BorderColor="Transparent" CornerRadius="100">
                        <BoxView Color="#222225"/>
                    </Frame>

                    <Button Text="Next" TextColor="#fff" FontSize="18" FontFamily="SatoshiMedium" HeightRequest="70" WidthRequest="250" BackgroundColor="#c20000" CornerRadius="40" Margin="0, 0, 0, 100" Clicked="ONextFinish"/>
                </VerticalStackLayout>
            </ScrollView>

            <ScrollView x:Name="FolderSection" Grid.Row="1" IsVisible="False" VerticalScrollBarVisibility="Never">
                <VerticalStackLayout x:Name="_folderStackLayout" Spacing="40" Margin="0, 15, 0, 0">
                    <ListView x:Name="FoldersListView" SeparatorVisibility="None" VerticalScrollBarVisibility="Never" Margin="0, 0, 0, 120">
                        <ListView.RowHeight>60</ListView.RowHeight>

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Border BackgroundColor="#222225" StrokeShape="RoundRectangle 40" HeightRequest="50" Stroke="Transparent" Padding="0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="0.5*"/>
                                                <ColumnDefinition Width="40"/>
                                            </Grid.ColumnDefinitions>

                                            <Button Grid.ColumnSpan="3" BackgroundColor="Transparent" MinimumHeightRequest="0" Clicked="FolderChosen" CommandParameter="{Binding Id}"/>

                                            <Label Text="{Binding Name}" TextColor="#fff" FontSize="16" FontFamily="SatoshiMedium" HorizontalTextAlignment="Start" VerticalTextAlignment="Center" LineBreakMode="TailTruncation" Margin="20, 0, 0, 0"/>
                                            <Label Grid.Column="1" Text="{Binding Timestamp}" TextColor="#707070" FontSize="12" FontFamily="SatoshiMedium" HorizontalTextAlignment="End" VerticalTextAlignment="Center" Margin="0, 0, 20, 0"/>
                                            <ImageButton Grid.Column="2" Source="pen.png" WidthRequest="20" HeightRequest="30" HorizontalOptions="End" CommandParameter="{Binding Id}" Margin="0, 0, 20, 0"/>
                                        </Grid>
                                    </Border>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </VerticalStackLayout>
            </ScrollView>

            <Image x:Name="passStamp" Grid.RowSpan="2" Source="pass.png" Opacity="0"/>
            <Image x:Name="failStamp" Grid.RowSpan="2" Source="fail.png" Opacity="0"/>
        </Grid>

        <Grid x:Name="folderAdd" IsVisible="False">
            <BoxView Grid.Row="1" Color="Transparent" HeightRequest="150" VerticalOptions="End" IsEnabled="False">
                <BoxView.Background>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="Transparent"
                            Offset="0.1" />
                        <GradientStop Color="#141414"
                            Offset="0.8" />
                    </LinearGradientBrush>
                </BoxView.Background>
            </BoxView>

            <Frame x:Name="newFolder" Grid.RowSpan="2" HorizontalOptions="End" VerticalOptions="End"
               Padding="0" Margin="0, 0, 35, 35" BackgroundColor="Transparent" BorderColor="Transparent" WidthRequest="60" HeightRequest="60" CornerRadius="30">
                <Grid BackgroundColor="Red">
                    <Image Source="plus.png" Scale="0.5"/>

                    <Button BackgroundColor="Transparent" Clicked="NewFolder"/>
                </Grid>
            </Frame>
        </Grid>

        <ActivityIndicator x:Name="loadingBG" IsRunning="False" Color="Transparent" BackgroundColor="#80000000" Grid.RowSpan="2" Margin="-20, -20, -20, 0">
            <ActivityIndicator.IsVisible>
                <OnPlatform x:TypeArguments="x:Boolean">
                    <On Platform="Android, iOS" Value="True" />
                    <On Platform="Windows" Value="False" />
                </OnPlatform>
            </ActivityIndicator.IsVisible>
        </ActivityIndicator>
        <ActivityIndicator x:Name="loading" IsRunning="False" Color="Red" WidthRequest="75" Grid.RowSpan="2">
            <ActivityIndicator.IsVisible>
                <OnPlatform x:TypeArguments="x:Boolean">
                    <On Platform="Android, iOS" Value="True" />
                    <On Platform="Windows" Value="False" />
                </OnPlatform>
            </ActivityIndicator.IsVisible>
        </ActivityIndicator>
    </Grid>
</ContentPage>